{
    "compilerOptions": {
        // require strict types (null-safety)
        "strict": true,
        // tell TS to generate ESM syntax so import and export and not require
        // required by Electron and Vite
        "target": "ESNext",
        // use the Node.js module system
        // tell TS to use ESM syntax as input (including .js file imports)
        "module": "NodeNext",
        // output directory of our JS generated files 
        // TS will copy code, remove types, and generate JS files
        "outDir": "../../dist-electron",
        // skip errors from dependencies if they don't use the same tsconfig
        "skipLibCheck": true,
        // add global types, .d.ts will be inferred by typescript
        "types": ["../../types"]
    }
}